{
  "name": "insane-react-pwa",
  "description": "A small React + TypeScript + Vite starter with Material UI and PWA support (service worker, install prompt, offline indicators).",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "author": "lucasdee",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
